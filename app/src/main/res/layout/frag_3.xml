<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:layout_height="match_parent"
    tools:context=".Tab3">
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
       
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                app:cardCornerRadius="5dp"
                android:id="@+id/Core"
                android:clickable="true"
                android:elevation="4dp"
                android:layout_height="180dp">
                <LinearLayout
                    android:id="@+id/core"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:id="@+id/coreicon"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="Core"
                        android:layout_gravity="center"
                        android:textColor="@color/black"/>

                </LinearLayout>
            </android.support.v7.widget.CardView>
           
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <android.support.v7.widget.CardView
                android:layout_width="170dp"
                android:layout_margin="5dp"
                app:cardCornerRadius="5dp"
                android:id="@+id/csedept"
                android:clickable="true"
                android:elevation="4dp"
                android:layout_height="180dp">
                <LinearLayout
                    android:id="@+id/cse"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:id="@+id/cseicon"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="CSE"
                        android:layout_gravity="center"
                        android:textColor="@color/black"/>

                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="170dp"
                android:id="@+id/ecedept"
                android:clickable="true"
                android:elevation="4dp"
                app:cardCornerRadius="5dp"
                android:layout_margin="5dp"
                android:layout_height="180dp">
                <LinearLayout
                    android:id="@+id/ece"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:id="@+id/eceicon"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="ECE"
                        android:layout_gravity="center"
                        android:textColor="@color/black"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <android.support.v7.widget.CardView
                android:layout_width="170dp"
                android:layout_margin="5dp"
                app:cardCornerRadius="5dp"
                android:id="@+id/eeedept"
                android:clickable="true"
                android:elevation="4dp"
                android:layout_height="180dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/eee"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:id="@+id/eeeicon"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="EEE"
                        android:layout_gravity="center"
                        android:textColor="@color/black"/>

                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="170dp"
                android:id="@+id/mechdept"
                android:clickable="true"
                android:elevation="4dp"
                app:cardCornerRadius="5dp"
                android:layout_margin="5dp"
                android:layout_height="180dp">
                <LinearLayout
                    android:id="@+id/mech"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:id="@+id/mechicon"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="Mech"
                        android:layout_gravity="center"
                        android:textColor="@color/black"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <android.support.v7.widget.CardView
                android:layout_width="170dp"
                android:id="@+id/mcadept"
                android:clickable="true"
                android:elevation="4dp"
                app:cardCornerRadius="5dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_height="180dp">
                <LinearLayout
                    android:id="@+id/mca"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:id="@+id/mcaicon"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="MCA"
                        android:layout_gravity="center"
                        android:textColor="@color/black"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="170dp"
                android:id="@+id/civildept"
                android:clickable="true"
                android:elevation="4dp"
                app:cardCornerRadius="5dp"
                android:layout_margin="5dp"
                android:layout_height="180dp">
                <LinearLayout
                    android:id="@+id/civil"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:id="@+id/civilicon"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="Civil"
                        android:layout_gravity="center"
                        android:textColor="@color/black"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>

    </LinearLayout>


</ScrollView>