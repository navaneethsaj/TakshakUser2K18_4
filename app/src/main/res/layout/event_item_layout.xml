<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="@color/colorPrimary"
        android:id="@+id/itemlayout"
        android:orientation="vertical"
        android:padding="2dp"
        android:elevation="4dp"
        android:layout_margin="4dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/relativelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/eventName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="26dp"
                android:layout_toEndOf="@+id/eventImage"
                android:fontFamily="serif"
                android:paddingLeft="4dp"
                android:text="EventName"
                android:textAppearance="@android:style/TextAppearance.Material.Subhead"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/eventCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/eventName"
                android:layout_marginTop="55dp"
                android:fontFamily="casual"
                android:paddingLeft="4dp"
                android:text="Adventure"
                android:textAppearance="@android:style/TextAppearance.Material.Subhead"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/eventImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:padding="4dp"
                android:src="@drawable/noimg" />


            <ImageView
                android:id="@+id/expandicon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/eventImage"
                android:layout_alignParentEnd="true"
                android:src="@drawable/arrowdown" />
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/moreinfo"
                android:layout_below="@+id/eventImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/eventId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/abhaya_libre_medium"
                    android:padding="4dp"
                    android:text="G001"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="REGISTER"/>

                <TextView
                    android:id="@+id/eventDept"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/abhaya_libre_medium"
                    android:padding="4dp"
                    android:text="Computer Science"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/eventDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/abhaya_libre_medium"
                    android:padding="4dp"
                    android:text="This is the desciption of the event"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>
